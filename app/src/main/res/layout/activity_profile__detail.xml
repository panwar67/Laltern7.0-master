<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#f5f5f5"

    tools:context="com.lions.sparsh23.laltern.Profile_Detail">

    <ScrollView
        android:layout_width="match_parent"

        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <com.lions.sparsh23.laltern.ExpandableHeightGridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="1"

        android:id="@+id/profile_detail_list">
    </com.lions.sparsh23.laltern.ExpandableHeightGridView>
    <Button
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New"

        android:id="@+id/add_profile_detail"
        android:layout_alignParentBottom="true"
        android:layout_alignBottom="@id/profile_detail_list"
        android:background="@color/white"
        android:layout_below="@+id/profile_detail_list"
        android:layout_centerHorizontal="true" />
        </LinearLayout>
    </ScrollView>





</LinearLayout>
