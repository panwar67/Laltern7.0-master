<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:background="#f5f5f5"



    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:id="@+id/navrep"
    tools:context="com.lions.sparsh23.laltern.NavigationMenu"
    tools:showIn="@layout/app_bar_navigation_menu">

    <ScrollView
        android:id="@+id/scrollviewnav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:scrollbars="none">


        <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"


            android:orientation="vertical">


            <include
                layout="@layout/nav_menu"
                android:layout_width="match_parent"

                android:layout_height="wrap_content" />


            <EditText


                android:id="@+id/searchviewrealid"


                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shadowbag"
                android:drawableLeft="@drawable/ic_search_black_24dp"
                android:drawableRight="@drawable/vector_drawable_filter"
                android:focusable="false"

                android:hint="Search for Crafts, Artist and Products...."
                android:paddingBottom="5dp"


                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:textSize="13dp">

            </EditText>


            <LinearLayout
                android:layout_width="match_parent"


                android:layout_height="wrap_content"
                android:background="#f5f5f5"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:background="#f5f5f5"
                    android:src="@drawable/bortwo"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/trend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text=" Trending Products"
                    android:textColor="#444444"
                    android:textSize="20dp"

                    android:textStyle="bold" />


                <org.lucasr.twowayview.TwoWayView
                    android:id="@+id/horizontallist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:orientation="horizontal"
                    android:paddingBottom="5dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"


                android:layout_height="wrap_content"
                android:background="#f5f5f5"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:background="#f5f5f5"
                    android:src="@drawable/bortwo"
                    android:visibility="gone"
                    tools:ignore="ContentDescription" />

                <TextView

                    android:id="@+id/topproducts"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text=" Top Products"
                    android:textColor="#444444"
                    android:textSize="20dp"

                    android:textStyle="bold" />

                <org.lucasr.twowayview.TwoWayView
                    android:id="@+id/horizontallisttop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_suicide"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/craft_suicide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="#f5f5f5"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text=" View Crafts"
                    android:textColor="#444444"
                    android:textSize="2dp"
                    android:textStyle="bold" />


                <com.lions.sparsh23.laltern.ExpandableHeightGridView
                    android:id="@+id/expandgrid_suicide"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#f5f5f5"
                    android:numColumns="2"></com.lions.sparsh23.laltern.ExpandableHeightGridView>

            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:background="#f5f5f5"
                    android:src="@drawable/bortwo"
                    android:visibility="gone" />


                <TextView


                    android:id="@+id/craft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:background="#f5f5f5"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"

                    android:text=" View Crafts"
                    android:textColor="#444444"
                    android:textSize="20dp"
                    android:textStyle="bold" />


                <com.lions.sparsh23.laltern.ExpandableHeightGridView
                    android:id="@+id/expandgrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f5f5f5"
                    android:numColumns="2">

                </com.lions.sparsh23.laltern.ExpandableHeightGridView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="#f5f5f5"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:background="#f5f5f5"
                    android:src="@drawable/bortwo"
                    android:visibility="gone"
                    tools:ignore="ContentDescription" />


                <TextView

                    android:id="@+id/artist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:background="#f5f5f5"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"

                    android:text=" View Artist"
                    android:textColor="#444444"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <com.lions.sparsh23.laltern.ExpandableHeightGridView
                    android:id="@+id/expandgridone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f5f5f5"
                    android:numColumns="1">

                </com.lions.sparsh23.laltern.ExpandableHeightGridView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="#f5f5f5"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:background="#f5f5f5"
                    android:src="@drawable/bortwo"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/testicals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:background="#f5f5f5"
                    android:paddingLeft="5dp"

                    android:paddingTop="5dp"
                    android:text=" Testimonials"
                    android:textColor="#444444"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <com.lions.sparsh23.laltern.ExpandableHeightGridView
                    android:id="@+id/expandtesticals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f5f5f5"
                    android:numColumns="1">

                </com.lions.sparsh23.laltern.ExpandableHeightGridView>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</FrameLayout>
