<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.lions.sparsh23.laltern.ProductView"
    >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"

        >



        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/maintheme"
            >

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/transparent">
                <LinearLayout
                    android:paddingTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@android:color/transparent">

                    <ImageView
                        android:id="@+id/backpro"
                        android:layout_gravity="left"
                        android:layout_width="35dp"
                        android:scaleType="center"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_arrow_back_black_24dp"
                        tools:ignore="ContentDescription" />


                    <View
                        android:layout_width="1dp"
                        android:layout_height="30dp"
                        android:layout_weight="1222">

                    </View>







                    <ImageView

                        android:id="@+id/viewcartpro"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="Scaned Card"
                        android:layout_gravity="right"
                        android:layout_weight="12"
                        android:src="@drawable/cartmenu"
                        tools:ignore="ContentDescription" />

                    <de.hdodenhof.circleimageview.CircleImageView

                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:visibility="gone"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:text="Scaned Card"
                        android:layout_gravity="right"
                        android:layout_weight="1"


                        android:src="@drawable/profilemenu"
                        tools:ignore="ContentDescription" />
                </LinearLayout>


                <android.support.design.widget.TabLayout
                    android:layout_width="match_parent"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="-13dp"
                    android:id="@+id/tablayout"
                    android:layout_height="35dp"

                    style="@style/MyCustomTabLayout"

                    app:tabMode="fixed">
                </android.support.design.widget.TabLayout>


            </LinearLayout>

        </android.support.v7.widget.Toolbar>




        <android.support.v4.view.ViewPager

            android:id="@+id/viewpager"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


        </android.support.v4.view.ViewPager>









    </android.support.design.widget.AppBarLayout>











</FrameLayout>
