<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundoff"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"

    tools:context="com.lions.sparsh23.laltern.AboutProductFrag">

    <!-- TODO: Update blank fragment layout -->




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">




                <com.daimajia.slider.library.SliderLayout
                    android:id="@+id/slider"
                    android:background="@color/white"

                    android:layout_width="match_parent"

                    android:layout_height="400dp"
                    >


                </com.daimajia.slider.library.SliderLayout>


                <com.daimajia.slider.library.Indicators.PagerIndicator
                    android:id="@+id/custom_indicator"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    custom:selected_color="#bf0036"
                    custom:unselected_color="#55333333"

                    custom:shape="oval"
                    custom:selected_padding_left="5dp"
                    custom:selected_padding_right="5dp"
                    custom:unselected_padding_left="5dp"
                    custom:unselected_padding_right="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    custom:selected_width="6dp"
                    custom:selected_height="6dp"
                    custom:unselected_width="6dp"
                    custom:unselected_height="6dp"
                    android:layout_marginBottom="5dp"
                    />


                <LinearLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/titlepro"

                        android:text="TITLE"
                        android:layout_marginLeft="5dp"


                        android:layout_weight="1"
                        android:textSize="18dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_height="wrap_content">



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2000"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:id="@+id/pricepro"
                        android:textStyle="bold"
                        android:paddingLeft="5dp"
                        android:paddingRight="20sp"/>


                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MOQ- 5"
                        android:textStyle="bold"
                        android:paddingRight="8dp"
                        android:textAlignment="textEnd"
                        android:layout_gravity="end"
                        android:textSize="16sp"
                        android:paddingEnd="15dp"
                        android:textColor="@android:color/holo_red_dark"
                        android:id="@+id/quantitypro"
                        />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingTop="1dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">









                </LinearLayout>
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/backshadow"></View>













                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white">




                    <LinearLayout
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <TextView
                            android:layout_marginTop="8dp"

                            android:id="@+id/selectquantitylabel"
                            android:textStyle="bold"
                            android:paddingLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SELECT QUANTITY"/>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/priceseek"
                                android:paddingLeft="10dp"
                                android:layout_gravity="center_vertical"
                                android:textSize="20dp"
                                android:text="10"/>

                            <TextView
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/ Piece"
                                android:id="@+id/textView"
                                android:layout_alignParentBottom="true"
                                android:layout_toRightOf="@+id/priceseek"
                                android:layout_toEndOf="@+id/priceseek" />


                            <TextView

                            android:textSize="20dp"
                            android:layout_width="wrap_content"
                            android:textAlignment="textStart"
                            android:paddingRight="10dp"
                            android:layout_gravity="start|center_horizontal"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:id="@+id/quantityseek"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="18dp"
                            android:layout_marginEnd="18dp" />


                        </RelativeLayout>




                    </LinearLayout>

                        <com.crystal.crystalrangeseekbar.widgets.BubbleThumbSeekbar
                            android:id="@+id/quantity"
                            android:paddingTop="8dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:paddingLeft="10dp"
                            app:left_thumb_image="@drawable/seekbar"
                            app:left_thumb_image_pressed="@drawable/seekbig"
                            app:bar_highlight_color="#A54B17"
                            android:paddingRight="10dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/backshadow"></View>

                </LinearLayout>



                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/white">


                        </LinearLayout>


                        <TextView
                            android:layout_margin="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DESCRIPTION : "

                            android:id="@+id/deshead"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Test Description"

                            android:paddingLeft="8dp"

                            android:layout_marginBottom="3dp"
                            android:id="@+id/descriptionpartpro"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/backshadow"></View>

                        <TextView

                            android:id="@+id/crafthead"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" CRAFT USED"
                            android:layout_margin="8dp"

                            android:textStyle="bold"/>
                        <TextView
                            android:paddingLeft="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/typepro"
                            android:layout_marginBottom="3dp"
                       />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/backshadow"></View>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="8dp"
                                android:id="@+id/coloravail"
                                android:text="Available Sizes"/>

                             </LinearLayout>

                        <Spinner
                            android:layout_width="match_parent"
                            android:id="@+id/sizehorizontalavail"
                            android:orientation="horizontal"

                            android:choiceMode="singleChoice"
                            android:layout_height="wrap_content">

                        </Spinner>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/backshadow">

                        </View>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="vertical"
                            >
                            <RatingBar
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:numStars="5"
                                android:stepSize="0.1"
                                android:rating="2"
                                android:isIndicator="true"
                                android:layout_marginRight="5dp"
                                android:progressTint="#DAA520"
                                android:layout_height="wrap_content"
                                android:id="@+id/productrating"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="4/5"
                                android:id="@+id/finalratings"
                                android:textAlignment="center"/>

                        </LinearLayout>
                        </LinearLayout>

            </LinearLayout>

        </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <TextView
                    android:paddingTop="8dp"
                    android:id="@+id/similarproductslabel"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SIMILAR PRODUCTS"/>
                <org.lucasr.twowayview.TwoWayView
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/similarproducts"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/multiple_actions_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="bottom|end"

        fab:menu_labels_style="@style/menu_labels_style"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp">
        <com.github.clans.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chat_black_24dp"
            fab:fab_label=" Send Request "
            android:id="@+id/fabreq"
            fab:fab_colorNormal="#43a047"
            fab:fab_colorPressed="@color/green"/>

        <com.github.clans.fab.FloatingActionButton
            android:layout_width="52dp"
            android:layout_height="52dp"
            fab:fab_colorNormal="#43a047"
            fab:fab_label=" Add To Cart "
            android:id="@+id/fabcart"
            android:src="@drawable/ic_add_shopping_cart_black_24dp"
            fab:fab_colorPressed="@color/green" />



    </com.github.clans.fab.FloatingActionMenu>




</FrameLayout>
