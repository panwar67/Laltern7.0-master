<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="#f5f5f5"
    tools:context="com.example.sparsh23.laltern.CartActivity"
    tools:showIn="@layout/activity_cart">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <TextView
        android:paddingLeft="5dp"
        android:typeface="serif"
        android:layout_width="match_parent"
        android:layout_gravity="top"
        android:layout_height="wrap_content"
        android:text="Total Items : "
        android:gravity="top"
        android:textStyle="bold"
        android:id="@+id/cartprototal"
        android:paddingTop="5dp"
        android:layout_marginBottom="5dp"/>


    <com.example.sparsh23.laltern.ExpandableHeightGridView
        android:layout_width="match_parent"
        android:id="@+id/cartproducts"
        android:background="#f5f5f5"
        android:layout_height="wrap_content"
        >

    </com.example.sparsh23.laltern.ExpandableHeightGridView>


    <LinearLayout
        android:paddingBottom="3dp"
        android:layout_marginBottom="50dp"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:background="@drawable/shadowbag"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:textColor="#424242"
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:text="Sub Total  :    "
            android:id="@+id/cartsubtotal"
            android:layout_gravity="end"/>

        <TextView
            android:textColor="#424242"
            android:layout_margin="2dp"
            android:id="@+id/carttaxtotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:paddingRight="5dp"
            android:text="Total Taxes :     "
            android:layout_gravity="end"/>

        <TextView
            android:textColor="#424242"
            android:layout_margin="2dp"
            android:paddingRight="5dp"
            android:id="@+id/cartgrandtotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:text="Total  : "
            android:layout_gravity="end"/>

    </LinearLayout>

    </LinearLayout>

    </ScrollView>














</LinearLayout>
